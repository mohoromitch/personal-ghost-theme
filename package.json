{
    "name": "mohoromitch",
    "description": "Mitchell Mohorovich's personal website theme, based on Bootstrap 5",
    "demo": "https://mitchell.mohorovich.ca",
    "version": "1.2.0",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/desktop.png"
    },
    "scripts": {
        "dev": "rollup -c --environment BUILD:development -w",
        "build": "rollup -c --environment BUILD:production",
        "zip": "npm run build && bestzip $npm_package_name.zip assets/* partials/* members/* *.hbs package.json",
        "test": "npx gscan .",
        "pretest": "npm run build"
    },
    "author": {
        "name": "Mitchell Mohorovich",
        "email": "mitchell@mohorovich.ca",
        "url": "mitchell.mohorovich.ca"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "starter",
        "bootstrap",
        "mitchell",
        "mohorovich",
        "mohoromitch"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mohoromitch/personal-ghost-theme"
    },
    "bugs": "https://github.com/TryGhost/Starter/issues",
    "contributors": [
        {
            "email": "mitchell@mohorovich.ca",
            "name": "Mitchell Mohorovich",
            "url": "mitchell.mohorovich.ca"
        }
    ],
    "devDependencies": {
        "@babel/core": "^7.21.0",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^25.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "bestzip": "^2.2.1",
        "postcss": "^8.4.24",
        "postcss-import": "^15.1.0",
        "postcss-preset-env": "^8.0.1",
        "rollup": "4.22.4",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-postcss": "^4.0.2"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 15,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "type": "module"
}
