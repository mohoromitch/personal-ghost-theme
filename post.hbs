{{!< default}}

{{#post}}

    <article class="{{post_class}}">
        <span class="text-muted"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
        <h1 class="">{{title}}</h1>
        {{#if custom_excerpt}}
            <p class="gh-excerpt">{{custom_excerpt}}</p>
        {{/if}}

        <figure class="figure">

        {{#if feature_image}}
            <img src="{{img_url feature_image}}" class="figure-img img-fluid rounded" alt="post image">
        {{/if}}
        {{#if feature_image_caption}}
            <figcaption class="figure-caption">{{feature_image_caption}}</figcaption>
        {{/if}}
        </figure>

        <p>
            {{content}}
        </p>

    </article>

